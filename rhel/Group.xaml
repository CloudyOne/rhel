<UserControl x:Class="rhel.Group"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" Name="group" Margin="0" Height="42" Width="350" Loaded="group_Loaded">
    <Grid Width="350" Height="42">
        <Button Content="x" Height="23" HorizontalAlignment="Left" Margin="0,10,0,0" Name="delete" VerticalAlignment="Top" Width="16" Click="delete_Click" />
        <TextBox Height="23" Margin="22,10,0,0" Name="groupname" VerticalAlignment="Top" HorizontalAlignment="Left" Width="135" TextChanged="groupChanged" />
        <Button Content="launch" Height="23" Margin="0,9,0,0" Name="launch" VerticalAlignment="Top" HorizontalAlignment="Right" Width="75" Click="launch_Click" />
        <Button Content="configure" Height="23" Margin="0,9,96,0" Name="configure" VerticalAlignment="Top" HorizontalAlignment="Right" Width="75" Click="configure_Click" />
    </Grid>
</UserControl>
