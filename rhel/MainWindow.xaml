<Window x:Class="rhel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Rapid Heavy EVE Launcher" Height="350" Width="376" Loaded="Window_Loaded" Closing="Window_Closing" ResizeMode="CanMinimize" StateChanged="Window_StateChanged">
    <Grid>
        <Button Content="launch" Height="23" Margin="0,62,12,0" Name="launch" VerticalAlignment="Top" Click="launch_Click" HorizontalAlignment="Right" Width="75" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="10,63,0,0" Name="username" VerticalAlignment="Top" Width="120" />
        <PasswordBox Height="23" Margin="136,63,0,0" Name="password" VerticalAlignment="Top" HorizontalAlignment="Left" Width="120" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="10,10,0,0" Name="evePath" VerticalAlignment="Top" Width="246" />
        <Button Content="browse" Height="23" HorizontalAlignment="Right" Margin="0,9,12,0" Name="browse" VerticalAlignment="Top" Width="75" Click="browse_Click" />
    </Grid>
</Window>
