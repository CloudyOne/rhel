<Window x:Class="rhel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Rapid Heavy EVE Launcher" Height="350" Width="400" MinHeight="350" MinWidth="400" Loaded="Window_Loaded" Closing="Window_Closing" ResizeMode="CanResize" StateChanged="Window_StateChanged" Icon="/rhel;component/rhel.ico">
    <Grid>
        <TextBox Height="23" Margin="10,10,98,0" Name="txtEvePath" VerticalAlignment="Top" LostFocus="txtEvePath_LostFocus" />
        <CheckBox Margin="12,39,12,254" Name="dx9" Checked="setDX9" Unchecked="unsetDX9" >Launch using DirectX 9</CheckBox>
        <Button Content="browse" Height="23" HorizontalAlignment="Right" Margin="0,9,12,0" Name="browse" VerticalAlignment="Top" Width="75" Click="browse_Click" />
        <ScrollViewer Margin="0,63,0,41">
            <StackPanel Name="accountsPanel"></StackPanel>
        </ScrollViewer>
        <Button Content="add account" Name="addAccount" Margin="12,0,0,12" Click="addAccount_Click" Height="23" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="93" />
       
    </Grid>
</Window>
