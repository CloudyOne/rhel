<UserControl x:Class="rhel.Account"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" Name="account" Margin="0" Height="42" Width="350">
    <Grid Width="350" Height="41">
        <TextBox Height="23" Margin="0,10,0,0" Name="username" VerticalAlignment="Top" HorizontalAlignment="Left" Width="131" TextChanged="credentialsChanged" />
        <Button Content="launch" Height="23" Margin="0,9,0,0" Name="launch" VerticalAlignment="Top" HorizontalAlignment="Right" Width="75" Click="launch_Click" />
        <PasswordBox Height="23" Margin="137,10,0,0" Name="password" VerticalAlignment="Top" HorizontalAlignment="Left" Width="132" PasswordChanged="credentialsChanged" />
    </Grid>
</UserControl>
